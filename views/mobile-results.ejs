<html>
  <head>
      <link rel="stylesheet" type="text/css" href="public/css/style.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.2.0/socket.io.js"></script>
    <script>
      const socket = io();

      socket.on('reload', () => {
        window.location.reload();
      });
    </script>
  </head>
  <body style="background-image: url(static/mobile-results-background.jpg); background-position: left top; background-size: cover;">
    <div class="mobile-results-container mobile-container">
      <button id="back" class="back-button mobile-results-back button" style="background-image: url(static/back-button.png); background-size: cover;">Back</button>
      <button id="adjudicate" class="adjudicate-button">Adjudicate</button>
    </div>
  </body>
  <script>
    const button = document.getElementById('back');
    button.addEventListener('click', () => {
      socket.emit('back');
    });

    const adjudicate = document.getElementById('adjudicate');
    adjudicate.addEventListener('click', () => {
      socket.emit('adjudicate');
    });
  </script>
</html>
